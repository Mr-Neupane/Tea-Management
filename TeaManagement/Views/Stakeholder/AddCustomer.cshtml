@model TeaManagement.ViewModels.AddStakeholderVm

@{
    ViewData["Title"] = "Add Customer";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">   <!-- Controls card width -->
            <div class="card shadow-sm">
                <div class="card-header text-center">
                    <h5 class="mb-0">Add Customer</h5>
                </div>

                <div class="card-body">
                    <form method="post" asp-action="AddCustomer">
                        <div class="mb-3">
                            <label asp-for="FullName">Full Name <span class="text-danger">*</span></label>
                            <input asp-for="FullName" autocomplete="off" required="required" class="form-control"
                                   placeholder="Enter name"/>
                        </div>
                        <div class="mb-3">
                            <label asp-for="PanNo">Pan No</label>
                            <input asp-for="PanNo" type="number" autocomplete="off"
                                   class="form-control" placeholder="Enter Pan number"/>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ContactNumber">Contact Number <span class="text-danger">*</span></label>
                            <input asp-for="ContactNumber" type="number" required="required" autocomplete="off"
                                   class="form-control" placeholder="Enter contact number"/>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Email">Email <span class="text-danger">*</span></label>
                            <input asp-for="Email" type="email" autocomplete="off" required="required"
                                   class="form-control" placeholder="Enter Email"/>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Address">Address <span class="text-danger">*</span></label>
                            <input asp-for="Address" autocomplete="off" required="required" class="form-control"
                                   placeholder="Enter Address"/>
                        </div>


                        <div>
                            <button type="submit" onclick="return confirm('Do you want to add customer')"
                                    class="btn btn-primary ">Save
                            </button>
                            <button asp-action="AddCustomer" formmethod="get" class="btn btn-danger">Reset</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@model TeaManagement.ViewModels.UnitVm

@{
    ViewData["Title"] = "Add Unit";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header text-center">
                    <h5 class="mb-0">New Unit</h5>
                </div>

                <div class="card-body">
                    <form method="post" asp-action="AddUnit">
                        <div class="mb-3">
                            <label asp-for="UnitName">Unit Short Name <span class="text-danger">*</span></label>
                            <input asp-for="UnitName" class="form-control" autocomplete="off" required="required"/>
                        </div>
                        <div class="mb-3">
                            <label asp-for="UnitDescription">Unit Description</label>
                            <textarea asp-for="UnitDescription" class="form-control" rows="2"></textarea>
                        </div>

                        <div>
                            <button type="submit" class="btn btn-primary "
                                    onclick="return confirm('Are you sure you want save!')"
                                    >Save</button>
                            <button type="reset" formmethod="get" class="btn btn-danger">Reset</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@model TeaManagement.ViewModels.AddProductsVm

@{
    ViewData["Title"] = "Add Product";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header text-center">
                    <h5 class="mb-0">New Product</h5>
                </div>

                <div class="card-body">
                    <form method="post" asp-action="AddProducts">
                        <div class="mb-3">
                            <label asp-for="ProductName">Product Name <span class="text-danger">*</span></label>
                            <input asp-for="ProductName" class="form-control" required="required"/>
                        </div>
                        <div class="mb-3">
                            <label asp-for="CategoryId">Select Factory</label>
                            <select asp-for="CategoryId" required="required" id="factoryid" class="form-control">
                                <option>Select Product Category..</option>
                                @if (Model.Categories != null)
                                {
                                    @foreach (var f in Model.Categories)
                                    {
                                        <option value="@f.Value">@f.Text</option>
                                    }
                                }

                            </select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ProductPrice">Price Per KG</label>
                            <input asp-for="ProductPrice" class="form-control" type="number"/>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ProductDescription">Remarks</label>
                            <textarea asp-for="ProductDescription" class="form-control" rows="2"></textarea>
                        </div>

                        <div>
                            <button type="submit" class="btn btn-primary ">Save</button>
                            <button asp-action="AddProducts" formmethod="get" class="btn btn-danger">Reset</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>